{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./**/*", "../services/**/*", "../types.d.ts"]
}
